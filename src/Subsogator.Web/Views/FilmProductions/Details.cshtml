@model Subsogator.Web.Models.FilmProductions.ViewModels.FilmProductionFullDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>FilmProduction</h4>
    <hr />
    <dl class="row bg-secondary">
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(filmProduction => filmProduction.Title)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(filmProduction => filmProduction.Title)
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(filmProduction => filmProduction.Duration)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(filmProduction => filmProduction.Duration)
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(filmProduction => filmProduction.ReleaseDate)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(filmProduction => filmProduction.ReleaseDate)
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(filmProduction => filmProduction.PlotSummary)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(filmProduction => filmProduction.PlotSummary)
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(filmProduction => filmProduction.CountryName)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(filmProduction => filmProduction.CountryName)
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(filmProduction => filmProduction.LanguageName)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(filmProduction => filmProduction.LanguageName)
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(filmProduction => filmProduction.ImageName)
        </dt>
        <dd class="col-sm-10 text-white">
            @if (Model.ImageName != null)
            {
                <img src="~/images/film-productions/@Model.ImageName"
                 class="rounded-square"
                 asp-append-version="true" style="width: 100%; height: 300px;" />
                <br />
                <span><a href="~/images/film-productions/@Model.ImageName">@Model.ImageName</a></span>
            }
            else 
            {
                <p>No Image</p>
            }
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(filmProduction => filmProduction.RelatedGenres)
        </dt>
        <dd class="col-sm-10 text-white">
            @for (var i = 0; i < Model.RelatedGenres.Count(); i++)
            {
                <span>@Model.RelatedGenres[i]</span>

                if (i != Model.RelatedGenres.Count() - 1)
                {
                   <span>,</span>
                }
            }
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(filmProduction => filmProduction.RelatedActors)
        </dt>
        <dd class="col-sm-10 text-white">
            @for (var i = 0; i < Model.RelatedActors.Count(); i++)
            {
                <span>@Model.RelatedActors[i].Item1 @Model.RelatedActors[i].Item2</span>

                if (i != Model.RelatedActors.Count() - 1)
                {
                    <span>,</span>
                }
            }
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(filmProduction => filmProduction.RelatedDirectors)
        </dt>
        <dd class="col-sm-10 text-white">
            @for (var i = 0; i < Model.RelatedDirectors.Count(); i++)
            {
                <span>@Model.RelatedDirectors[i].Item1 @Model.RelatedDirectors[i].Item2</span>

                if (i != Model.RelatedDirectors.Count() - 1)
                {
                    <span>,</span>
                }
            }
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(filmProduction => filmProduction.RelatedScreenwriters)
        </dt>
        <dd class="col-sm-10 text-white">
            @for (var i = 0; i < Model.RelatedScreenwriters.Count(); i++)
            {
                <span>@Model.RelatedScreenwriters[i].Item1 @Model.RelatedScreenwriters[i].Item2</span>

                if (i != Model.RelatedScreenwriters.Count() - 1)
                {
                    <span>,</span>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
