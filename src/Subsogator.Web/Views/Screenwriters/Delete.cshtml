@model Subsogator.Web.Models.Screenwriters.ViewModels.DeleteScreenwriterViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3>@ViewData["Title"]</h3>

<h3>Are you sure you want to delete this screenwriter?</h3>
<div>
    <h4>Screenwriter</h4>
    <hr />
    <dl class="row bg-secondary">
        <dt class="col-sm-2 text-dark bg-light">
            @Html.DisplayNameFor(screenwriter => screenwriter.FirstName)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(screenwriter => screenwriter.FirstName)
        </dd>
        <dt class="col-sm-2 text-dark bg-light">
            @Html.DisplayNameFor(screenwriter => screenwriter.LastName)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(screenwriter => screenwriter.LastName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
