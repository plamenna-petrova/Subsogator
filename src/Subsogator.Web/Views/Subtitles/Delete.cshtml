@model Subsogator.Web.Models.Subtitles.ViewModels.DeleteSubtitlesViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3>@ViewData["Title"]</h3>

@if (TempData["SubtitlesErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["SubtitlesErrorMessage"]
    </div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Subtitles</h4>
    <hr />
    <dl class="row bg-secondary">
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
