@model Subsogator.Web.Models.Actors.ViewModels.ActorDetailsViewModel

@{
    ViewData["Title"] = "Actor Details";
}

<h3>@ViewData["Title"]</h3>

<div>
    <hr />
    <dl class="row bg-secondary">
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(actor => actor.FirstName)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(actor => actor.FirstName)
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(actor => actor.LastName)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(actor => actor.LastName)
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(actor => actor.CreatedOn)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(actor => actor.CreatedOn)
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(actor => actor.CreatedBy)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(actor => actor.CreatedBy)
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(actor => actor.ModifiedOn)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(actor => actor.ModifiedOn)
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            @Html.DisplayNameFor(actor => actor.ModifiedBy)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(actor => actor.ModifiedBy)
        </dd>
        <dt class="col-sm-2 text-white bg-info font-weight-normal">
            Related Film Productions
        </dt>
        <dd class="col-sm-10 text-white">
            @if (Model.RelatedFilmProductions.Count() > 0)
            {
                <table class="table table-striped table-light table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Duration</th>
                            <th>Release Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var filmProduction in Model.RelatedFilmProductions)
                        {
                            <tr>
                                <td>
                                    @filmProduction.Title
                                </td>
                                <td>
                                    @filmProduction.Duration
                                </td>
                                <td>
                                    @filmProduction.ReleaseDate.ToShortDateString()
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <div>No Related Film Productions</div>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Back To Actors List</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark">Edit Actor</a>
</div>
