@model Subsogator.Web.Models.Actors.ViewModels.DeleteActorViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3>@ViewData["Title"]</h3>

<h3>Are you sure you want to delete this actor?</h3>
<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row bg-secondary">
        <dt class = "col-sm-2 text-dark bg-light">
            @Html.DisplayNameFor(actor => actor.FirstName)
        </dt>
        <dd class = "col-sm-10 text-white">
            @Html.DisplayFor(actor => actor.FirstName)
        </dd>
        <dt class = "col-sm-2 text-dark bg-light">
            @Html.DisplayNameFor(actor => actor.LastName)
        </dt>
        <dd class = "col-sm-10 text-white">
            @Html.DisplayFor(actor => actor.LastName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
